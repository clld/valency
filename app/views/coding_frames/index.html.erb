<!-- Coding frames index -->
<h1>
  Coding frames
  <small>of <%= link_to @language.name, @language %></small>
</h1>

<table id="coding_frames_list" class="table table-striped table-hover table-bordered-sharp dataTable">
  <thead>
    <tr>
      <th>Coding frame</th>
      <th data-hide="true">derived</th>
      <th data-hide="true">arg_count</th>
      <th>Meaning labels &amp; Verbs</th>
    </tr>
  </thead>
    
  <tbody>
    <% @coding_frames.each do |cf| %>
    <% verbs = cf.verbs %>
      <tr>
        <td><%= link_to(cf, [@language, cf]) unless cf.to_s.blank? %></td>
        <td><%= cf.derived   %></td>
        <td><%= cf.arg_count %></td>
        <td><%= verb_list(verbs) if verbs %></td>
      </tr>
    <% end %>
  </tbody>

</table>

<br />
