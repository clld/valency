<div class="contributor" id="<%= dom_id(contributor) %>">
  <% c = contributor %>
  <% if c.photo_url %>
    <% photo = capture { image_tag(c.photo_url, class: 'img-polaroid photo') } %>
    <div class="photo-container">
      <%= link_to_if c.url, photo, c.url %>
    </div>
  <% end %>
  <p class="contributor-name"><%= link_to_if c.url, c.name, c.url %></p>
  <% if c.affiliation %>
    <p><%= c.affiliation %></p>
  <% end %>
</div>
