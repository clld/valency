<div class="contributor" id="<%= dom_id(contributor) %>">
  <% c = contributor; photo_file = "photos/#{c.id}.jpg" %>
  <div class="photo-container">
  <% if Rails.application.assets.find_asset(photo_file) %>
    <% photo = capture { image_tag(photo_file, class: 'img-polaroid photo') } %>
      <%= link_to_if c.url, photo, c.url %>
  <% end %>
  </div>
  <p class="contributor-name"><%= link_to_if c.url, c.name, c.url %></p>
  <% if c.affiliation %>
    <p><%= c.affiliation %></p>
  <% end %>
</div>
