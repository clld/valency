<!-- Languages index -->

<div class="row">
  <div class="span12">  

    <h4>Languages by geographical region</h4>
    <% counter = 0 %>
    <div class="row">
      <div class="span6">
    
    <% @regions.each do |region| %>
      <h5 id="region-#{region.split(' ')[0]}"><%= region %></h5>
      <table class="table table-very-condensed no-borders">
        <tbody>
          <% @languages.select{|l| l.continent == region}.each do |lang| %>
            <tr>
              <th><%= link_to lang, lang %></th>
              <td>
                <% if (contributors = lang.contributors).size > 0 %>
                  <%= lang.contributors.first.name %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
			<% if ((counter += 1) % 2).even? # every other table: begin new row %>
				</div></div><div class="row"><div class="span6">
			<% else %>
			  </div><div class="span6">
			<% end # endif %>
		
    <% end %>

    </div><!-- span6 -->
  </div>  <!-- row -->

    
  </div>
</div>














