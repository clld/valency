<!-- Languages index -->
<h1 class="center">Languages</h1>

<table class="table thetable table-striped table-bordered">
	<thead>
  <tr>
    <th>Name</th>
    <th>Iso code</th>
    <th>Family</th>
    <th>Variety</th>
    <th>Region</th>
  </tr>
</thead><tbody>
<% @languages.each do |l| %>
  <tr>
    <td><%= link_to l, l %></td>
    <td><%= l.iso_code %></td>
    <td><%= l.family %></td>
    <td><%= l.variety %></td>
    <td><%= l.continent %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />
