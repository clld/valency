<!-- Meaning -->
<p id="notice"><%= notice %></p>

<h1>
  <%= @meaning.label.upcase %>
  <small>(<%= @meaning.meaning_list.downcase %>)</small>
</h1>

<div class="row">
  <div class="span6"><!-- meaning details -->
    <table class="table table-condensed">
      <tbody>
        <tr>
          <td><strong>Role frame</strong></td>
          <td><%= @meaning.role_frame %></td>
        </tr>

        <tr>
          <td><strong>Typical context</strong></td>
          <td><em><%= @meaning.typical_context %></em></td>
        </tr>

        <tr>
          <td><strong>Microroles</strong></td>
          <td><%= @meaning.microroles.all.map{|mr| mr.name}.join(', ') %></td>
        </tr>

      </tbody>
    </table>
  </div>
  <!-- <div class="span4">
    
  </div> -->
</div>
<div class="new row">
  <div class="span6">
    There are <strong><%= @meaning.verbs.size %></strong> Verb forms for this meaning:
	  <table id="verbs_list" class="table table-striped table-bordered dataTable">
	    <thead>
	     <tr>
	       <th>Verb form</th>
	       <th>Language</th>
	     </tr>
	    </thead>

	    <tbody>
	     <% @meaning.verbs.each do |v| %>
  	     <% lang = v.language %>
  	     <tr>
  	       <td><%= link_to v, [lang, v] %></td>
  	       <td><%= link_to lang, lang %></td>
  	     </tr>
	     <% end %>
	    </tbody>
	  </table>

	  &nbsp;
	  
	</div>
</div
