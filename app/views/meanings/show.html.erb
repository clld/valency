<!-- Meaning -->
<p id="notice"><%= notice %></p>

<h1>
  <%= @meaning.label.upcase %>
  <small><%= @meaning.core_or_additional %> meaning</small>
</h1>

<div class="row">
  <div class="span6"><!-- meaning details -->
    <table class="table table-condensed table-horizontal">
      <tbody>
        <tr>
          <th>Role frame</th>
          <td><%= @meaning.role_frame %></td>
        </tr>

        <tr>
          <th>Typical context</th>
          <td><em><%= @meaning.typical_context %></em></td>
        </tr>

        <tr>
          <th>Microroles</th>
          <td><%= @meaning.microroles.all.map{|mr| mr.name}.join(', ') %></td>
        </tr>

      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="span12">
    <h2>Verb forms <span class="badge with-h2"><%= @meaning.verbs.size %></span></h2>

	  <table id="verbs_list" class="table table-striped table-bordered-sharp table-hover dataTable">
	    <thead>
	     <tr>
	       <th>Language</th>
	       <th class="hidden-col">region</th>
	       <th class="hidden-col">family</th>
	       <th>Verb form</th>
	       <th>Basic Coding frame</th>
	     </tr>
	    </thead>

	    <tbody>
	     <% @meaning.verbs.each do |v| %>
  	     <% lang = v.language; cf = v.coding_frame %>
  	     <tr>
  	       <td><%= link_to lang, lang %></td>
  	       <td><%= lang.region %></td>
  	       <td><%= lang.family %></td>
  	       <td><%= link_to v,  [lang, v ], class: 'object-language' %></td>
  	       <td><%= link_to cf, [lang, cf] unless cf.nil? || cf.to_s.blank? %></td>
  	     </tr>
	     <% end %>
	    </tbody>
	  </table>

	  &nbsp;
	  
	</div>
</div
