<!-- Verbs index -->
<h1>
  Verb forms
  <small>of <%= link_to @language.name, @language %></small>
</h1>

<table id="verbs_list" class="table table-striped table-bordered-sharp dataTable">
  <thead>
    <tr>
      <th>Verb form</th>
      <th class="<%= 'hidden-col' unless @orig_script %>">Original script</th>
      <th>Verb meanings</th>
      <th>Basic Coding frame</th>
    </tr>
  </thead>
<tbody>
<% @verbs.each do |verb| %>
<% cf = verb.coding_frame %>
  <tr>

    <td class="object-language">
      <%= link_to verb, [@language, verb] %>
    </td>

   	<td><%= verb.original_script if @orig_script %></td>

    <td><%= meaning_list(verb) %></td>

    <td>
      <% unless cf.to_s.blank? %>
        <%= render_cf(cf, link: true) %>
      <% end %>
    </td>

  </tr>
<% end %>
</tbody>
</table>

<br />
